RewriteEngine On



# Przekierowanie na HTTPS i www do non-www

RewriteCond %{HTTPS} off [OR]

RewriteCond %{HTTP_HOST} ^www\. [NC]

RewriteRule ^ https://sweetsteviam.com%{REQUEST_URI} [L,R=301]



# Przekierowanie 301 z .html na wersję bez .html
# Używa %{THE_REQUEST} żeby sprawdzić oryginalne żądanie HTTP (zapobiega pętli)
# Działa tylko gdy użytkownik wszedł bezpośrednio na URL z .html w przeglądarce

RewriteCond %{THE_REQUEST} \s/+([^\s]*?)\.html[\s?] [NC]

RewriteCond %{REQUEST_FILENAME} -f

RewriteRule ^(.*)\.html$ /$1 [R=301,L]



# Przekierowania dla starych URL (404 -> nowe URL)

RewriteRule ^stevia-tabs$ /products/stevia-tabs [R=301,L]

RewriteRule ^stevia-tabs\.html$ /products/stevia-tabs [R=301,L]

RewriteRule ^products-stevia-rebaudiana-bertoni-e960$ /products/stevia-rebaudiana-bertoni [R=301,L]

RewriteRule ^products-stevia-rebaudiana-bertoni-e960\.html$ /products/stevia-rebaudiana-bertoni [R=301,L]

RewriteRule ^pl/produkty-products-stevia-rebaudiana-bertoni-e960$ /pl/produkty/stevia-rebaudiana-bertoni [R=301,L]

RewriteRule ^pl/slodziki-hurtowe\.html$ /pl/naturalne-slodziki-hurtownia [R=301,L]

RewriteRule ^pl/produkty/erytrol$ /pl/produkty/erytrytol [R=301,L]

RewriteRule ^pl/produkty/erytrol\.html$ /pl/produkty/erytrytol [R=301,L]

RewriteRule ^pl/tabletki-stewii\.html$ /pl/produkty/tabletki-stewii [R=301,L]

RewriteRule ^pl/tabletki-stewii$ /pl/produkty/tabletki-stewii [R=301,L]



# Obsługa URL bez rozszerzenia .html (wewnętrzne przepisanie, bez przekierowania)

RewriteCond %{REQUEST_FILENAME} !-f

RewriteCond %{REQUEST_FILENAME} !-d

RewriteCond %{REQUEST_FILENAME}.html -f

RewriteRule ^(.*)$ $1.html [L]

# Lekki cache dla plików HTML (Google-friendly)
<FilesMatch "\.(html|htm)$">
    <IfModule mod_headers.c>
        Header set Cache-Control "public, max-age=3600, must-revalidate"
    </IfModule>
</FilesMatch>

<IfModule mod_expires.c>
  ExpiresActive On

  # Długie cache dla statycznych zasobów (1 rok)
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType application/x-javascript "access plus 1 year"
  ExpiresByType text/javascript "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"

  # Krótkie cache dla HTML (zawsze aktualne)
  ExpiresByType text/html "access plus 0 seconds"
</IfModule>

<IfModule mod_headers.c>
  <FilesMatch "\.(js|css|png|jpg|jpeg|webp|gif|svg|woff|woff2)$">
    Header set Cache-Control "max-age=31536000, public"
  </FilesMatch>
</IfModule>



<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE text/javascript
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/x-javascript
  AddOutputFilterByType DEFLATE application/json
  AddOutputFilterByType DEFLATE application/xml
  AddOutputFilterByType DEFLATE application/xhtml+xml
  AddOutputFilterByType DEFLATE font/woff2
  AddOutputFilterByType DEFLATE font/woff
</IfModule>



